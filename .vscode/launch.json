{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "RAG: Main Chat",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "RAG: Run Evaluation",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/evaluation/__init__.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        }
    ]
}
